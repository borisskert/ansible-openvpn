port 1194
proto {{network_protocol}}
dev {{network_device}}

# --- Certificate --- #
ca /etc/openvpn/keys/ca.crt
cert /etc/openvpn/keys/Server.crt
key /etc/openvpn/keys/Server.key

# --- Network --- #
server {{network_ip}} {{subnet_mask}}
ifconfig {{server_ip}} {{subnet_mask}}
ifconfig-pool-persist /tmp/ipp.txt
{% if route_gateway is defined and route_gateway | length > 0 %}
route-gateway {{route_gateway}}
{% endif %}
{% for route in routes %}
route {{route}}
{% endfor %}
{% for push in pushes %}
push "{{push}}"
{% endfor %}
keepalive 10 120

# --- Cipher --- #
cipher AES-256-CBC

# --- Auth --- #
auth SHA512

# --- DH --- #
dh /etc/openvpn/keys/dh.pem

# --- TLS --- #
tls-server
tls-cipher DHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-CAMELLIA256-SHA:DHE-RSA-AES256-SHA:DHE-RSA-CAMELLIA128-SHA:DHE-RSA-AES128-SHA:CAMELLIA256-SHA:AES256-SHA:CAMELLIA128-SHA:AES128-SHA
tls-version-min {{tls_version_min}}
remote-cert-tls client
tls-auth /etc/openvpn/keys/tls-auth.key 0

user openvpnuser
group openvpnuser
persist-key
persist-tun

# --- Log --- #
status /var/log/openvpn/status.log
log-append  /var/log/openvpn/openvpn.log
verb {{verbosity}}
